{
    "autoload": {
      "psr-4":  {
            "Mt\\": "src"
      } 
    },
    "autoload-dev": {
        "psr-4": {
            "Mt\\": "tests"
        }
    },
    "require": {
        "acelaya/expressive-slim-router": "^3.0",
        "acelaya/zf2-acmailer": "^7.0",
        "doctrine/cache": "^1.6",
        "google/recaptcha": "^1.1",
        "guzzlehttp/guzzle": "^6.3",
        "http-interop/http-middleware": "0.4.1",
        "monolog/monolog": "^1.23",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-expressive": "^2.1",
        "zendframework/zend-expressive-helpers": "^4.2",
        "zendframework/zend-expressive-platesrenderer": "^1.4",
        "zendframework/zend-inputfilter": "^2.8",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-session": "^2.8"
    },
    "require-dev": {
        "filp/whoops": "^2.1",
        "phpunit/phpunit": "6.0",
        "squizlabs/php_codesniffer": "^3.2",
        "zendframework/zend-expressive-tooling": "^0.4.5",
        "symfony/var-dumper": "^3.4",
        "symfony/dotenv": "^3.4",
        "slevomat/coding-standard": "^4.0"
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --coverage-clover build/clover.xml --colors=always",
        "pretty-test": "phpunit --coverage-html build/coverage"
    },
    "config": {
        "sort-packages": true
    }
}
